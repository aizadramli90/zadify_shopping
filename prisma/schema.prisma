generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  // The id field is a unique identifier for each product, generated by the database.
  // It uses the PostgreSQL function gen_random_uuid() to generate a random UUID.
  // This ensures that each product has a unique identifier that can be used to reference it in
  // queries and operations.
  name       String
  slug       String   @unique
  category   String
  Images     String[]
  brand      String
  stock      Int
  price      Decimal
  rating     Decimal
  numReviews Int
  isFeatured Boolean
  banner     String?
  createdAt  DateTime
}

